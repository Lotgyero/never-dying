{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "standard",
    "react",
    "prettier",
    "async-await"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "chrome-worker":{},
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "semi": [
      "error",
      "always"
    ],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  }
}
